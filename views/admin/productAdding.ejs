    <script>
        const priceInput = document.getElementById('price');
        const offerPrice = document.getElementById('offerPrice');
        const selectedCategory = document.getElementById('category');
        const prodctOfferInput  = document.getElementById('ProductOffer');
        const FinalPrice  = document.getElementById('FinalPrice');
        let value;
        selectedCategory.addEventListener('change', function () {
            value = selectedCategory.value;
        });
        priceInput.addEventListener('input', function () {
            const price = priceInput.value;
            fetch('/admin/Category_OfferValue', {
                method: 'post',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({
                    price: price,
                    value: value
                })
            })
                .then(res => res.json())
                .then(data => {
                    offerPrice.value = data
                })
                .catch(error => {
                    console.log(error)
                })
        });
        prodctOfferInput.addEventListener('input',function(){
            const productDiscount = prodctOfferInput.value;
            const value = offerPrice.value
            const p_discount = productDiscount/100;
            const finalProductPrice = Math.floor(value - (value*p_discount));
            FinalPrice.value = finalProductPrice;
        })
    </script>

