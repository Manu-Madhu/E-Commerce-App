                    <div class=" container col-md-9  p-0 m-0">
                        <div class="container p-0 bg-white p_addingWrapper">
                            <div class="container p-5">
                                <form action="/admin/p_adding" method="post" enctype="multipart/form-data">
                                    <div class="row d-flex mb-3">
                                        <div class="col-md-6 d-flex flex-column">
                                            <label for="">Product Name*</label>
                                            <input type="text" class="mt-1 py-2" name="p_name"
                                                placeholder="Product Name" required>
                                        </div>
                                        <div class="col-md-6 d-flex flex-column">
                                            <label for="">Category*</label>
                                            <!-- <input type="text" class="mt-1 py-2" name="category"
                                                placeholder="Category" required> -->
                                            <select name="category" id="category" class="mt-1 py-2">
                                                <option value="">Select Category</option>
                                                <% category.forEach((data)=>{ %>
                                                    <option value="<%= data.categoryName%>">
                                                        <%= data.categoryName%>
                                                    </option>
                                                    <% }); %>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="row d-flex mb-3 gap-4 p-0">
                                        <div class='row col-md-6 col-12 p-0 d-flex align-items-center justify-content-between'>
                                            <div class="col-md-6 col-12 p-0 ps-4 d-flex flex-column">
                                                <label for="">Price*</label>
                                                <input id="price" type="tel" class="mt-1 py-2" name="price"
                                                    placeholder="Price" pattern="[0-9]+"
                                                    title="Please enter numbers only" required>
                                            </div>
                                            <div class="col-md-5 col-12 d-flex flex-column p-0">
                                                <label for="">Category Offer Price*</label>
                                                <input id="offerPrice" type="" class="mt-1 py-2" name="c_offerPrice"
                                                    placeholder="Offer Price" required>
                                            </div>
                                        </div>
                                        <div class='row col-md-6 col-12 p-0 d-flex align-items-center justify-content-between'>
                                            <div class="col-md-4 col-12 ps-4 d-flex flex-column p-0">
                                                <label for="">Product Offer*</label>
                                                <input id="ProductOffer" type="" class="mt-1 py-2" name="productOffer"
                                                    placeholder="Product Offer" required>
                                            </div>
                                            <div class="col-md-4 col-12 d-flex flex-column p-0">
                                                <label for="">Final price*</label>
                                                <input id="FinalPrice" type="" class="mt-1 py-2" name="finalPrice"
                                                    placeholder="Final Price" required>
                                            </div>
                                            <div class="col-md-3 col-12 p-0 d-flex flex-column">
                                                <label for="" >Quantity*</label>
                                                <input type="number" class="mt-1 py-2" name="quantity" min="0"
                                                    pattern="[0-9]" title="Please enter nunmber" placeholder="Quantity"
                                                    required>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label for="">Discription*</label>
                                        <textarea class="form-control" placeholder="Description" name="description"
                                            rows="4" required></textarea>
                                    </div>
                                    <input type="file" class="form-control my-3 py-2" name="image" multiple>
                                    <div class="mt-3">
                                        <button type="submit" class="productAddButton btn btn-danger">Add
                                            Product</button>
                                    </div>
                                </form>
