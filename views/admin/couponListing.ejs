    </div>
    </div>
    <script src="/js/alert.js"></script>
    <script>
        function removeCoupon(couponId) {
            const confirmation = confirm("Are you sure you want to remove this coupon?");
            if (!confirmation) {
                return; 
            }
            fetch(`/admin/coupons/couponsRemove/${couponId}`, {
                method: 'POST'
            })
                .then(response => {
                    if (response.ok) {
                        const couponRow = document.getElementById(`coupon-${couponId}`);
                        if (couponRow) {
                            couponRow.remove();
                        }
                    } else {
                        console.error('Error removing coupon:', response.status);
                    }
                })
                .catch(error => {
                    console.error('Network error:', error);
                });
        }
    </script>
