                    <div class="d-flex flex-column align-items-center">
                        <% if(user) {%>
                        <div class="iconP ">
                            <a href="/profile"> <img src="/assets/admin/propic.webp" alt="" class="img-fluid"></a>
                        </div>
                        <%}else{%>
                            <div class="iconP ">
                                <a href="/profile"><i class="fa-regular fa-user text-dark"></i></a>
                            </div>
                        <%}%>
                         <span class="text-danger fw-bold ">
                            <%= locals.user?user:"" %>
                        </span>
                    </div>
                    </form>
                </div>
            </div>
    </nav>
    <!-- Search input -->
    <script>
        document.addEventListener("DOMContentLoaded", () => {
            const searchInput = document.getElementById('searchInput');
            const placeholder = searchInput.placeholder;
            searchInput.addEventListener('keypress', (event) => {
                if (event.key === 'Enter') {
                    const searchQuery = searchInput.value;
                    $.ajax({
                        type: 'get',
                        url: '/search',
                        data: { q: searchQuery },
                        success: (data) => {
                            console.log(data)
                            if (data.length > 0) {
                                UIupdate(data)
                            } else {
                                searchInput.placeholder = "No Product Found";
                            }
                        },
                        error: (error) => {
                            console.log(`Error while performing search: ${error}`);
                        }
                    });
                }
            });
        });

    </script>