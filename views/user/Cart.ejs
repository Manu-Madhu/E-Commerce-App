                                                                name="quantity"
                                                                value="<%= cartItems.find(item => item.productId.toString() === data._id.toString()).quantity %>"
                                                                style="width: 40px; border: 2px solid #020202; border-radius: 4px;"
                                                                onchange="updateQuantity(this,'<%= cartItems[index]._id %>')"
                                                                min="1" >
