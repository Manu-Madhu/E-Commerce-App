<%- include("../partials/header.ejs")%>
    <div class="container-fluid p-0 min-vh-100" style="margin-top: 8%;">
        <%- include("../partials/navBar.ejs")%>
            <!-- CAROUSEL -->
            <div id="carouselExampleControlsNoTouching" class="carousel slide container-fluid mt-2"
                data-bs-touch="false" data-bs-interval="false">
                <div class="carousel-inner">
                    <div class="imageOne carousel-item active d-flex align-items-center">
                        <img src="/assets/banners/test2.jpg" class=" CarouselImage d-block p-2 " alt="...">
                    </div>
                    <div class="carousel-item">
                        <img src="/assets/banners/banner2.jpg" class="CarouselImage d-block p-2 " alt="...">
                    </div>
                    <div class="carousel-item">
                        <img src="/assets/banners/banner3.jpg" class="CarouselImage d-block p-2" alt="...">
                    </div>
                </div>
                <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControlsNoTouching"
                    data-bs-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Previous</span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControlsNoTouching"
                    data-bs-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Next</span>
                </button>
            </div>
            <div class="container">
                <!-- line -->
                <div class="container">
                    <hr class="line bg-dark">
                </div>
                <!-- content -->
                <div class="row p-3 d-flex justify-content-between">
                    <div class="col-lg-2 col-md-2 p-3 mt-2 container SideFilter bg-white d-flex flex-column align-items-center">
                        <div class="filterBox d-flex justify-content-between p-3">
                            <span style="font-weight: 550;">FILTER</span>
                            <span style="font-weight: 550;">
                                <a style="text-decoration: none;" href="">
                                    Clear Filter
                                </a>
                            </span>
                        </div>
                        <!-- category  -->
                        <div class="container filterCo p-3">
                            <span style="font-weight: 550;">CATEGORIES</span>
                            <div class="px-2 filterFont" style="max-height: 150px; overflow-y: auto;">
                                <%category.forEach((data,index)=>{%>
                                    <div class="pt-2">
                                        <input type="checkbox" id="category-<%= data.categoryName %>"
                                            value="<%= index %>" class="category-checkbox">
                                        <label for="category-<%= index %>">
                                            <%=data.categoryName%>
                                        </label>
                                    </div>
                                    <%})%>
                            </div>
                        </div>
                        <!-- line -->
                        <!-- <div class="container">
                            <hr class="line bg-dark">
                        </div> -->
                        <!--Rate Range -->
                        <!-- <div class="filterSlider d-flex flex-column justify-content-between p-3">
                            <span style="font-weight: 550;">PRICE</span>
                            <div class="pt-2" style="width: 100%;">
                                <input type="range" style="width: 100%;">
                            </div>
                            <div class="pt-1 d-flex justify-content-between">
                                <div class="Limit p-2"><span>1000</span></div>
                                <div class="Limit p-2"><span>1000</span></div>
                            </div>
                        </div> -->
                        <!-- line -->
                        <div class="container">
                            <hr class="line bg-dark">
                        </div>
                        <!-- Coustom Rating -->
                        <div class="container filterCo p-3">
                            <span style="font-weight: 550;">COUSTOMER RATINGS</span>
                            <div class="px-2 filterFont">
                                <div class="pt-2">
                                    <input type="checkbox">
                                    <label for="">4 Star Above</label>
                                </div>
                                <div class="">
                                    <input type="checkbox">
                                    <label for="">3 Star Above</label>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class=" col-lg-9 col-md-9 container p-0 m-0 d-flex flex-column align-items-start justify-content-start">
                        <div id="product-container" class="row d-flex align-items-center justify-content-start">
                            <% product.forEach((data,index)=>{%>
                                <div class="container bg-white ProductCard m-2 mx-4"
                                    data-category-id="<%= data.categoryId %>">
                                    <!-- image rendering  -->
                                    <a href="/detaildView/<%=data._id%>">
                                        <div class="cardImage mb-2 d-flex align-items-center justify-content-center">
                                            <img src="/productImages/<%=data.image[0]%>" alt="Product Image">
                                        </div>
                                    </a>
                                    <div class="px-3">
                                        <span class="text-dark">
                                            <%= data.p_name%>
                                        </span>
                                        <div class="p_price d-flex justify-content-between">
                                            <div class="price text-danger">₹ <text>
                                                    <%= data.finalPrice%>
                                                </text> &nbsp; <span>₹ <%=data.price%></span></div>
                                            <div class="favor" style="cursor: pointer;">
                                                <i class="fa-regular fa-heart"></i>
                                            </div>
                                        </div>
                                        <div class="rating d-flex align-items-center">
                                            <div class="star d-flex align-items-center">
                                                <img src="/assets/product/star.png" alt="">
                                                <img src="/assets/product/star.png" alt="">
                                                <img src="/assets/product/star.png" alt="">
                                                <img src="/assets/product/star.png" alt="">
                                                <img src="/assets/product/star.png" alt="">
                                            </div>
                                            <div class="value ms-2">(75)</div>
                                        </div>
                                    </div>
                                </div>
                                <%})%>
                        </div>
                        <!-- Page Nation -->
                        <div id="pagination-container"class="d-flex align-items-center justify-content-center w-100 mt-5">
                            <nav aria-label="..." class="d-flex align-items-center justify-content-center">
                                <ul class="pagination">
                                    <% if (currentPage > 1) { %>
                                        <li class="page-item text-dark">
                                            <a class="page-link" href="/shop?page=<%= currentPage - 1 %>" tabindex="-1">Previous</a>
                                        </li>
                                    <% } %>
                                    <% for (let page = 1; page <= totalPages; page++) { %>
                                        <% if (page === currentPage) { %>
                                            <li class="page-item active">
                                                <a class="page-link" href="/shop?page=<%= page %>"><%= page %></a>
                                            </li>
                                        <% } else { %>
                                            <li class="page-item">
                                                <a class="page-link" href="/shop?page=<%= page %>"><%= page %></a>
                                            </li>
                                        <% } %>
                                    <% } %>
                                    <% if (currentPage < totalPages) { %>
                                        <li class="page-item">
                                            <a class="page-link" href="/shop?page=<%= currentPage + 1 %>">Next</a>
                                        </li>
                                    <% } %>
                                </ul>
                            </nav>
                        </div>
                    </div>
                </div>
            </div>
    </div>
<!-- FILTER CHECKBOX -->
    <script>
        const checkboxes = document.querySelectorAll('[id^="category-"]');
        checkboxes.forEach((checkbox) => {
            checkbox.addEventListener('change', function () {
                const checkedCategories = [];
                checkboxes.forEach((checkbox) => {
                    if (checkbox.checked) {
                        const categoryName = checkbox.id.replace('category-', '');
                        checkedCategories.push(categoryName);
                    }
                })
                $.ajax({
                    type: 'post',
                    url: "/productFilter",
                    data: { categoryName: JSON.stringify(checkedCategories) },
                    success: function (res) {
                        const productContainer = document.getElementById('product-container');
                        productContainer.innerHTML = '';

                        res.forEach(function (data) {
                            const item = `
                             <div class="container bg-white ProductCard m-2 mx-4"
                                    data-category-id=${data._id}>
                                    <a href="/detaildView/${data._id}">
                                        <div class="cardImage mb-2 d-flex align-items-center justify-content-center">
                                            <img src="/productImages/${data.image[0]}" alt="Product Image">
                                        </div>
                                    </a>
                                    <div class="px-3">
                                        <span class="text-dark">
                                            ${data.p_name}
                                        </span>
                                        <div class="p_price d-flex justify-content-between">
                                            <div class="price text-danger">₹ <text>
                                                    ${data.finalPrice}
                                                </text> &nbsp; <span>₹ ${data.price}</span></div>
                                            <div class="favor" style="cursor: pointer;">
                                                <i class="fa-regular fa-heart"></i>
                                            </div>
                                        </div>
                                        <div class="rating d-flex align-items-center">
                                            <div class="star d-flex align-items-center">
                                                <img src="/assets/product/star.png" alt="">
                                                <img src="/assets/product/star.png" alt="">
                                                <img src="/assets/product/star.png" alt="">
                                                <img src="/assets/product/star.png" alt="">
                                                <img src="/assets/product/star.png" alt="">
                                            </div>
                                            <div class="value ms-2">(75)</div>
                                        </div>
                                    </div>
                                   
                                </div>
                             `
                            productContainer.innerHTML += item
                        });
                    }
                })
            });
        });
    </script>
    <%- include("../partials/footer.ejs")%>