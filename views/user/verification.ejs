                </div>
            </div>
    </div>
    <script>
        let timeLeft = 59;
        const Counter = document.getElementById('time');
        const timerId = setInterval(countdown, 1000);

        function countdown() {
            const text = document.getElementById("timer");
            if (timeLeft == -1) {
                text.style.display = "inline-block";

            } else {
                Counter.innerHTML = '00 :' + " " + timeLeft;
                timeLeft--;
            }
        }
    </script>

