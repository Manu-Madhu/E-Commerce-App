<%- include('../../partials/header.ejs') %>
    <div class="container-fluid p-0 min-vh-100" style="margin-top: 6%;">
        <%-include('../../partials/navBar.ejs') %>
            <div class="container ">
                <div class="row p-4 mb-4">
                    <div class="container col-lg-3 col-md-3 col-12 p-3 m-0">
                        <div class="container bg-white profile_left p-5">
                            <div class="mb-4 d-flex flex-column">
                                <h6>Manage My Account</h6>
                                <a href="/profile" class="text-decoration-none">My Profile</a>
                            </div>
                            <div class="mb-4 d-flex flex-column">
                                <h6>My Orders</h6>
                                <a href="/profile/order" class="text-decoration-none ">My Orders</a>
                                <a href="/profile/orderReturn" class="text-decoration-none text-danger">My Return</a>
                            </div>
                            <div class="mb-4 d-flex flex-column">
                                <h6>My Address</h6>
                                <a href="/profile/address" class="text-decoration-none ">My Address</a>
                            </div>
                        </div>
                    </div>
                    <div class="container col-lg-9 col-md-9 col-12 py-3 p-0 m-0">
                        <div class="container-fluid bg-white profile_Right">
                            <div class="container summary d-flex align-items-center justify-content-between pt-3"
                                id="product">
                                <h6 class="p-3 ps-4">Return</h6>
                                <input type="text" placeholder="what are you looking for?" class="text-center"id="myOrder">
                            </div>
                            <div class="container-fluid p-2 m-0 mb-2">
                                <%if(returnProduct.length>0){%>
                                    <%returnProduct.forEach((data,index)=>{%>
                                            <div class="container-fluid">
                                                <div class="container pt-4">
                                                    <!-- Main content -->
                                                    <div class="row">
                                                        <div class="col-lg-12 p-0">
                                                            <!-- Details -->
                                                            <div class="mb-4 profile_info ">
                                                                <div class="card-body ">
                                                                    <div class="mx-2">
                                                                        <span colspan="2" class="text-danger" style="font-size: 13px; opacity: 70%;">Within 2 days our exicutive will contact you for the payment details....</span>
                                                                    </div>
                                                                    <div class="mt-2 mb-2 d-flex justify-content-between">
                                                                        <div class="mx-2">
                                                                            <span class="me-3 fw-bold"">#<%=index+1%></span>
                                                                            <span class="me-3 fw-bold" style="font-size: 13px;color: #959595;"><span>Deliverd Date : </span> <%= data.expectedDelivery.toLocaleDateString(undefined, { year: 'numeric', month: 'short', day: 'numeric' }) %></span>
                                                                            <%if(data.status =="Return Requested"){%>
                                                                                <span class="me-3 badge rounded-pill bg-warning " style="font-size: 13px; font-weight: 400;"><%=data.status%></span>
                                                                            <%}else{%>
                                                                                <span class="me-3 badge rounded-pill bg-success" style="font-size: 13px; font-weight: 400;"><%=data.status%></span>
                                                                            <%}%>
                                                                        </div>
                                                                    </div>
                                                                    <table class="table table-borderless">
                                                                        <tbody >
                                                                            <% data.proCartDetail.forEach((productArray,index) => { %>
                                                                                  <tr>
                                                                                    <td>
                                                                                      <div class="d-flex mb-2">
                                                                                        <div class="flex-shrink-0">
                                                                                          <img src="/productImages/<%=productArray.image[0]%>" alt="" width="35" class="img-fluid">
                                                                                        </div>
                                                                                        <div class="flex-lg-grow-1 ms-3">
                                                                                          <h6 class="small mb-0" style="font-size: 14px; color: #959595;">
                                                                                            <a href="#" class="text-reset text-decoration-none">
                                                                                              <%= productArray.p_name %>
                                                                                            </a>
                                                                                          </h6>
                                                                                        </div>
                                                                                      </div>
                                                                                    </td>
                                                                                    <td style="font-size: 13px;"><%= data.cartProduct[index].quantity %></td>
                                                                                    <td class="text-end fw-bold" style="font-size: 14px; color: #959595;">₹<%= data.cartProduct[index].price %></td>
                                                                                </tr>
                                                                              <% }) %>
                                                                        </tbody>
                                                                        <tfoot class=" pt-2 bg-white" style="border-radius: 10px;">
                                                                                <tr class="fw-bold">
                                                                                    <td colspan="2"  style="color: #4c4c4c;">PAYMENT METHOD</td>
                                                                                    <td colspan="2" class="text-end text-success"style="color: #959595;"><%=data.payment.method%></td>
                                                                                </tr>
                                                                                <tr class="fw-bold">
                                                                                    <td colspan="2"  style="color: #4c4c4c;">TOTAL</td>
                                                                                    <td colspan="2" class="text-end text-success"style="color: #959595;">₹ <%=data.payment.amount%></td>
                                                                                </tr>
                                                                        </tfoot>   
                                                                    </table>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                     <%})%>
                                        </div>
                                    </div>
                                    <%}else{%>
                                        <div class="d-flex align-items-center justify-content-center">
                                            <lottie-player
                                                src="https://assets10.lottiefiles.com/packages/lf20_3VDN1k.json"
                                                background="transparent" speed="5"
                                                style="width: 300px; height: 300px; opacity: 80%;" loop autoplay>
                                            </lottie-player>
                                        </div>
                                <%}%>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
    </div>
    <%-include('../../partials/footer.ejs') %>