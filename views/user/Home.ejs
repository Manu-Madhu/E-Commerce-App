                </div>

                <!-- banner -->
                <div class="container">
                    <img src="/assets/banners/banner4.jpg" alt="" class="img-fluid p-3 bannerImage">
                </div>

                <!-- line -->
                <div class="container">
                    <hr class="line bg-dark">
                </div>

                <!-- view product -->
                <div class="container d-flex p-3  justify-content-between ">
                    <div class="textHeading fw-bold fs-4">Latest Women Wearing</div>
                    <form action="/Shop" method="get">
                        <button class="productviewButton">view all products</button>
