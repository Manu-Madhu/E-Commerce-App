                                    <span class="discount-tag"><%= data.productOffer %>% off</span>
                                    <a href="/detaildView/<%= data._id%>">
                                        <img src="/productImages/<%=data.image[0] %>" class="product-thumb" alt="">
                                    </a>
                                    <button class="card-btn">add to wishlist</button>
                                </div>
                                <div class="product-info">
