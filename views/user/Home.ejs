                <!-- line -->
                <div class="container">
                    <hr class="line bg-dark mt-5">
                </div>

                <!-- view Accessory -->
                <div class="container d-flex p-3  justify-content-between ">
                    <div class="textHeading fw-bold fs-4">Latest Women Accessory</div>
                    <button class="productviewButton">view all products</button>
                </div>

                <!--Accessory Container -->
                <section class="product container p-0">
                    <button class="pre-btn"><img class="pre-btn-img" src="/assets/icons/arrow.png" alt=""></button>
                    <button class="nxt-btn"><img class="pre-btn-img" src="/assets/icons/arrow.png" alt=""></button>
                    <div class="product-container w-100">
                        <% dataNormal.forEach((data,index)=>{ %>
